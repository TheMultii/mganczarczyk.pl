---
import Header from "../components/Header/Header";
import MainLayout from "../layouts/main-layout.astro";
import PortfolioItem from "../components/PortfolioItem/PortfolioItem.astro";
---

<MainLayout>
    <Header client:visible />
    <PortfolioItem
        title="UBB Timetable"
        descriptionPrimary="An unofficial timetable that allows you to easily view the timetable of the University of Bielsko-Biała. Automatically synchronises changes made to the timetable. Written with ease of use in mind. Downloaded over 400 times within one academic year. 😎"
        technologies="Flutter・Dart・Python・MariaDB"
        availability="Android・WEB (soon)・Windows (soon)"
        imageURL="/assets/ubb_timetable/ubb-1.webp"
    />
    <PortfolioItem
        title="Collection of questions for IT technician exams"
        descriptionPrimary="A collection of questions with answers for the IT technician exams. All presented on one page, without the need for unnecessary navigation. Many of the questions available there are ranked high in positioning by Google. The site is most visited in January and June - the exam months. 💪"
        technologies="React・MariaDB"
        availability="WEB"
        imageURL="/assets/it_technician_exams/it-1.webp"
    />
    <PortfolioItem
        title="Tairiku"
        descriptionPrimary="A service that indexes and collects anime graphics into a database. There is also an API that returns a random graphic from the database with information about that graphic (width, height, source, hash), and a website and smartphone app for viewing and possibly saving those graphics to disk. An ideal application when we need an 'image placeholder'. The database contains over 4 million records collected continuously for over 5 years from sites such as Reddit/Imgur. 🖼️"
        technologies="React・Python・MariaDB"
        availability="WEB・Android"
        useBlurhashImageComponent={true}
    />
</MainLayout>
