---
import MainLayout from "../layouts/main-layout.astro";
---

<MainLayout>
    <div
        class="pt-24 min-h-[calc(100vh-88px)] flex items-center justify-center"
    >
        <div class="flex flex-col items-center justify-center sm:flex-row">
            <img
                src="/assets/404.webp"
                class="w-[125px] h-[125px] select-none pointer-events-none"
                alt="404"
            />
            <div class="sm:ml-4 text-center">
                <h1 class="text-4xl text-center mt-4 sm:mt-0">
                    Page not found
                </h1>
                <p class="text-center mt-4 mb-2">
                    The page you are looking for does not exist.
                </p>
                <a href="/" class="text-[#1ab69d]">Take me home.</a>
            </div>
        </div>
    </div>
</MainLayout>
